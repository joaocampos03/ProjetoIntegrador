generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Aeroporto {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  codigo              String   @unique
  nome                String
  cidade              String
  estado              String
  descricao           String
  imagemUrl           String
  latitude            Float
  longitude           Float
  vooRegular          Boolean  @default(true)
  frequenciaSemanal   Int      @default(0)
  
  rotasOrigem         Rota[]   @relation("AeroportoOrigem")
  rotasDestino        Rota[]   @relation("AeroportoDestino")
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@map("aeroportos")
}

model Rota {
  id                  String     @id @default(auto()) @map("_id") @db.ObjectId
  
  aeroportoOrigemId   String     @db.ObjectId
  aeroportoOrigem     Aeroporto  @relation("AeroportoOrigem", fields: [aeroportoOrigemId], references: [id])
  codigoOrigem        String
  
  aeroportoDestinoId  String     @db.ObjectId
  aeroportoDestino    Aeroporto  @relation("AeroportoDestino", fields: [aeroportoDestinoId], references: [id])
  codigoDestino       String
  
  vooRegular          Boolean    @default(true)
  frequenciaSemanal   Int
  bidirecional        Boolean    @default(true)
  
  preco               Float      @default(0)
  
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  
  @@unique([codigoOrigem, codigoDestino])
  @@map("rotas")
}

model Consulta {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  origem              String
  destino             String
  tipoConsulta        String
  resultado           Json
  tempoResposta       Int
  
  createdAt           DateTime @default(now())
  
  @@map("consultas")
}

model Usuario {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  nome                String
  email               String   @unique
  senha               String
  endereco            String
  dataNascimento      DateTime
  sexo                String
  cpf                 String   @unique
  telefone            String
  
  rotasSalvas         RotaSalva[]
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@map("usuarios")
}

model RotaSalva {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  
  usuarioId           String   @db.ObjectId
  usuario             Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  
  nome                String
  
  descricao           String?
  
  preco               Float    @default(0)
  
  aeroportos          String[]
  
  detalhesAeroportos  Json
  
  ativa               Boolean  @default(true)
  
  compartilhamentos   RotaCompartilhada[]
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@map("rotas_salvas")
}

model RotaCompartilhada {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  
  codigo              String   @unique
  
  rotaSalvaId         String   @db.ObjectId
  rotaSalva           RotaSalva @relation(fields: [rotaSalvaId], references: [id], onDelete: Cascade)
  
  publica             Boolean  @default(false)
  ativa               Boolean  @default(true)
  
  visualizacoes       Int      @default(0)
  
  expiraEm            DateTime?
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@map("rotas_compartilhadas")
}
